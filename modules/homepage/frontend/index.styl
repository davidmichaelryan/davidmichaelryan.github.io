@import "../../../core/frontend/stylus/variables.styl"
@import "../../../core/frontend/stylus/linkUnderlines.styl"

section
  padding: 0 20px 40px 20px
  background-color: $jcrew-light-blue
  color: $background-color
  
  a
    linkUnderlines $jcrew-light-blue, $background-color
 
  &:first-child
    padding-top: 20px

 section 
  .row
    h1
      border-bottom: 1px solid $background-color
      font-size: 48px
      margin: 0

    h3 
      margin-bottom: 0
    h4
      margin-top: 0
      
    &:nth-child(n+2)
      padding-left: 10px  
