@import '../../../core/frontend/stylus/variables.styl'

gradient()
  background-color: $pocket-red
  background-image: -moz-linear-gradient(top, $pocket-red-light 0,$pocket-red 100%);
  background-image: -webkit-gradient(left top,left bottom,color-stop(0, $pocket-red-light),color-stop(100%,$pocket-red));
  background-image: -webkit-linear-gradient(top, $pocket-red-light 0,$pocket-red 100%);
  background-image: -o-linear-gradient(top, $pocket-red-light 0,$pocket-red 100%);
  background-image: -ms-linear-gradient(top, $pocket-red-light 0,$pocket-red 100%);
  background-image: linear-gradient(to bottom, $pocket-red-light 0,$pocket-red 100%);

#content.work
  margin: 0 20px 40px 20px

h1.title_header
  &.counter
    &::after
      gradient()
      border-radius: 10px
      color: rgba(255,255,255,1)
      content: attr(data-num)
      display: inline-block
      font-size: 0.25em
      height: 27px
      min-width:37px
      padding: 5px 5px
      vertical-align: top
  &.hide
    &::after
      color: rgba(255,255,255,0)
      transition: all 100ms linear            

button
  gradient()
  border: none
  border-radius: 4px 
  box-shadow: inset 0 1px 1px rgba(255,255,255,.4)
  color: white
  cursor: pointer
  display: block
  font-size: 24px  
  height: 40px
  margin: 0 auto
  width: 120px

h3.website
  font-style: italic

.auth
  display: block
  text-align: center

.random, .random .article-info
  display: none
  
a
  margin: 20px auto 40px auto
  cursor: pointer;

#random-button
  gradient()
  border-radius: 5px
  color: white
  cursor: pointer
  display: block
  margin:20px auto
  padding: 5px
  width: 190px
  