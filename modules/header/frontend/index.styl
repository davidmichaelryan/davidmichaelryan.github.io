@import '../../../core/frontend/stylus/variables.styl'
@import '../../../core/frontend/stylus/avatarzomg.styl'

header.row
  max-width: 850px
  margin: 0px auto
  overflow: hidden
  padding: 30px 0 0 0
  position: relative
  text-align: center

  h1
    margin: 20px 0 0 0
    float: left
    width: 66.6666667%
    font-size: 72px
    display: none
    text-align: left
    color: $jcrew-dark-turquoise
    
  img
    float: none
    text-align: center
    width: 160px
    position: relative
    top: 5px
  
  @media screen and (min-width: 401px)
    padding: 40px 0 0 0
  
  @media screen and (min-width: 641px)
    img
      float: right
      -moz-transform: scaleX(-1);
      -o-transform: scaleX(-1);
      -webkit-transform: scaleX(-1);
      transform: scaleX(-1);
      filter: FlipH;
      -ms-filter: "FlipH";
      width: 33.3333333%
      max-width: 140px
      top: 0
      
    h1
      display: block
    
  .face-mask
    position: absolute
    left: 50%
    top: 52px
    margin-left: -29px
    width: 51px
    height: auto
    fill: #fbecdf
    
    &:hover
      -webkit-animation: avatarzomg 0.4s infinite
      -moz-animation: avatarzomg 0.4s infinite
      animation: avatarzomg 0.4s infinite
  
    @media screen and (min-width: 401px)    
      top: 62px

    @media screen and (min-width: 641px)
      -moz-transform: scaleX(-1)
      -o-transform: scaleX(-1)
      -webkit-transform: scaleX(-1)
      transform: scaleX(-1)
      filter: FlipH
      -ms-filter: "FlipH"
      
      left: initial
      top: 55px;
      width: 44px;
      right: 45px;
