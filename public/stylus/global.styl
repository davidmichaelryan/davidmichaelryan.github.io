@import grid
@import linkUnderlines
@import "remodal.css"

$serif = 'Gentium Book Basic', serif
$sans-serif = 'Open Sans', sans-serif

$jcrew-dark-blue = rgb(39, 80, 117)
$jcrew-light-blue = rgb(80, 116, 153)
$jcrew-dark-turquoise = rgb(57, 117, 160)
$jcrew-light-turqouise = rgb(90, 152, 194)
$jcrew-periwinkle = rgb(196, 210, 231)
$jcrew-light-purple = rgb(214, 221, 236)
$background-color = rgb(214, 221, 236)
$font-color = rgb(33,33,33)

html 
  background-color: $background-color
  color: $font-color
  box-sizing: border-box
  
*, *:before, *:after 
  box-sizing: inherit

::selection {
  background: #FF9933
  
}
::-moz-selection {
  background: #FF9933
}

body 
  color: rgb(33,33,33)
  font: 112.5% $sans-serif
  margin: 0px auto

h1, h2, h3, h4, h5 
  font-family: $sans-serif

p 
  font-size: 16px

ul 
  list-style: none
  padding: 0 10px 0 15px
  @media screen and (min-width: 561px)
    padding: 0 20px

a
  text-decoration: none
  linkUnderlines $background-color, $font-color

li
  font-size: 16px
  margin-bottom: 10px 
  span
    display: inline-block
    width: 79px

div.row
  max-width: 840px

#work, #gifs
  padding: 40px 20px
  background-color: $jcrew-light-blue
  color: $background-color
  
  a
    linkUnderlines $jcrew-light-blue, $background-color
 
 #work 
  .row
    h1
      border-bottom: 1px solid $background-color
      font-size: 48px
      margin: 0

    h3 
      margin-bottom: 0
    h4
      margin-top: 0
      
    &:nth-child(n+2)
      padding-left: 10px  

#gifs
  h1
    text-align: center
  .row > h1
    font-size: 128px
    margin: 0
    text-align: left
  a
    cursor: pointer
  ul
    overflow: hidden
  li
    float: left
    display: inline-block
    margin-bottom: 20px
    width: 100%
    
    @media screen and (min-width: 610px)
      width: 50%
    @media screen and (min-width: 870px)
      width: 33.3333%

.remodal    
  background-color: $jcrew-light-blue
  color: $background-color
  
  button.remodal-close
    color: $background-color
    
    &:before
      font-size: 48px
      top: 4px 
      left: 4px
  
  img
    margin: 0 auto
    display: block
    max-width: 100%

#loading-gif-list
  height: 350px
  img
    display: block
    margin: 0 auto
    max-width: 100%

header.row
  max-width: 850px
  margin: 0px auto
  overflow: hidden
  padding: 30px 0 0 0
  position: relative
  text-align: center

  h1
    margin: 20px 0 0 0
    float: left
    width: 66.6666667%
    font-size: 72px
    display: none
    text-align: left
    color: $jcrew-dark-turquoise
    
  img
    float: none
    text-align: center
    width: 160px
    position: relative
    top: 5px
  
  @media screen and (min-width: 401px)
    padding: 40px 0 0 0
  
  @media screen and (min-width: 641px)
    img
      float: right
      -moz-transform: scaleX(-1);
      -o-transform: scaleX(-1);
      -webkit-transform: scaleX(-1);
      transform: scaleX(-1);
      filter: FlipH;
      -ms-filter: "FlipH";
      width: 33.3333333%
      max-width: 140px
      top: 0
      
    h1
      display: block
    
  .face-mask
    position: absolute
    left: 50%
    top: 62px
    margin-left: -29px
    width: 51px
    height: auto
    fill: #fbecdf
    
    &:hover
      -webkit-animation: avatarzomg 0.4s infinite
      -moz-animation: avatarzomg 0.4s infinite
      animation: avatarzomg 0.4s infinite
  
    @media screen and (min-width: 641px)
      -moz-transform: scaleX(-1)
      -o-transform: scaleX(-1)
      -webkit-transform: scaleX(-1)
      transform: scaleX(-1)
      filter: FlipH
      -ms-filter: "FlipH"
      
      left: initial
      top: 55px;
      width: 44px;
      right: 45px;
      

footer
  width: 100%
  padding: 40px 20px
  background-color: $font-color
  color: $background-color
  
  .row
    padding: 0 20px
  
  h3
    border-bottom: 2px solid white
    display:inline-block
    margin:10px 0


#smedia > a
  position: relative
  display: inline-block 
  background-image: none
  
  &:after 
    content: "" 
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left:0

@keyframes avatarzomg
  0%, 100%
    -webkit-filter: invert(0) saturate(100%) hue-rotate(0deg)
    filter: invert(0) saturate(100%) hue-rotate(0deg)
  25%
    -webkit-filter: invert(10%) saturate(500%) hue-rotate(180deg)
    filter: invert(10%) saturate(500%) hue-rotate(180deg)
  50%
    -webkit-filter: invert(10%) saturate(300%) hue-rotate(300deg)
    filter: invert(10%) saturate(300%) hue-rotate(300deg)
  75%
    -webkit-filter: invert(10%) saturate(500%) hue-rotate(90deg)
    filter: invert(10%) saturate(500%) hue-rotate(90deg)


#new-recipes-table
  tr
    td
      input
        width: 98%

      &:last-child
        text-align: right
        width: 10%