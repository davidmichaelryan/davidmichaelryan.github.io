.circle-img
  @media screen and (min-width: 560px)
    float: right

.row
  margin-top: 20px
  @media screen and (min-width: 560px)
    margin-top: 30px

#groupon
  .eight
    h1
      color: #82b548
      font-family: $sans-serif
      margin-bottom: 0
      @media screen and (min-width: 560px)
        text-align: right
  
  .info-card
    background-color: #82b548
    border-radius: 10px
    padding: 20px
    
    @media screen and (min-width: 560px)
      margin: 30px 20px 0px 0
      
    ul 
      list-style: none
      padding: 5px 10px 
      margin: 0
      font-size: 16px

      li 
        margin-bottom: 10px

        span
          display: block
          font-style: italic
          padding-left: 10px
