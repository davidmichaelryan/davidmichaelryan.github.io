$serif = 'Gentium Book Basic', serif
$sans-serif = 'Open Sans', sans-serif

html 
  background-color: rgb(4, 19, 38)

body 
  color: white
  font: 112.5% $sans-serif
  margin: 30px auto
  padding: 0 20px
  @media screen and (min-width: 401px)
    margin: 40px auto

h1, h2, h3, h4, h5 
  font-family: $serif
  color: white

#menu
  margin: 0 auto 20px auto 
  h1
    display: block
    float: none
    margin: 0
    text-align: center 
    a 
      color: white
      text-decoration: none

  #smedia
    float: none
    margin: 10px auto 0 auto
    overflow: hidden
    width: 160px
  @media screen and (min-width: 401px)
    margin: 0 auto 40px auto
    h1
      display: inline-block
      float: left
    #smedia
      float: right
      margin: 0 auto
    .sprite
      opacity: 0.75
      transition: opacity 0.25s
      &:hover
        opacity: 1

a
  color: #1485CC

.sprite
  background: url('../images/button-sprite.png') no-repeat left center
  float: left
  height: 32px
  margin: 4px
  width: 30px


#twitter 
  background-position: -106px 0px

#spotify
  background-position:  -68px 1px
  margin-left: 0
  width: 35px

#linkedin 
  background-position:  -36px 0px

#github 
  background-position:  0px 0px
 
.circle-img 
  border-radius: 50%
  overflow: hidden
  max-height: 250px
  max-width: 250px
  margin: 0 auto

  img 
    width: 100%
    height: 100%
